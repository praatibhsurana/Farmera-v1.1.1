<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#104E33"
    android:weightSum="7"
    tools:context=".FarmerMain">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:layout_width="165dp"
                    android:layout_height="85dp"
                    android:src="@drawable/full_logo_white" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/user"
            android:layout_width="92dp"
            android:layout_height="14dp"
            android:fontFamily="@font/raleway_medium"
            android:text="Welcome user!"
            android:textAlignment="center"
            android:textColor="#E3E7AF"
            android:textSize="12dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <EditText
            android:id="@+id/locationText"
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:allowUndo="false"
            android:background="@drawable/ic_location_field"
            android:backgroundTint="#E3E7AF"
            android:cursorVisible="true"
            android:ems="8"
            android:fontFamily="@font/raleway_medium"
            android:hint="Enter your location"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColor="#44564D"
            android:textColorHighlight="#A3AD85"
            android:textColorHint="#44564D"
            android:textSize="12dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <android.widget.Button
            android:id="@+id/findDataBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_white_btn"
            android:fontFamily="@font/raleway_medium"
            android:onClick="findData"
            android:text="Find Data"
            android:textColor="#44564D"
            android:textSize="12dp"/>
    </LinearLayout>

</LinearLayout>